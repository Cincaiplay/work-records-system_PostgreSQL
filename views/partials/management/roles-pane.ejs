
<div class="tab-pane fade <%= activeTab === "roles" ? "show active" : "" %>"
     id="pane-roles" role="tabpanel" aria-labelledby="tab-roles" tabindex="0">


  <!-- Create Role -->
  <div class="card border-0 shadow-sm rounded-4 mb-4">
    <div class="card-body p-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h6 fw-bold mb-0">Create Role</h2>
        <span class="text-muted small">Role definitions per company</span>
      </div>

      <form method="POST" action="/management/roles/create" class="row g-3">
        <div class="col-md-4">
          <label class="form-label">Role Code</label>
          <input name="code" class="form-control" placeholder="e.g. ADMIN" required />
        </div>

        <div class="col-md-4">
          <label class="form-label">Role Name</label>
          <input name="name" class="form-control" placeholder="e.g. Administrator" required />
        </div>

        <div class="col-md-4">
          <label class="form-label">Company</label>
          <select name="company_id" class="form-select">
            <option value="">— Global —</option>
            <% companiesSafe.forEach(c => { %>
              <option value="<%= c.id %>"><%= c.short_code %> - <%= c.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="col-12">
          <label class="form-label">Description (optional)</label>
          <input name="description" class="form-control" placeholder="What can this role do?" />
        </div>

        <div class="col-12">
          <button class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Create Role
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Roles list + assign permissions -->
  <div class="card border-0 shadow-sm rounded-4">
    <div class="card-body p-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h6 fw-bold mb-0">Roles</h2>
        <span class="text-muted small"><%= rolesSafe.length %> total</span>
      </div>

      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr class="small text-uppercase">
              <th>ID</th>
              <th>Company</th>
              <th>Code</th>
              <th>Name</th>
              <th>Description</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% rolesSafe.forEach(r => { %>
              <tr>
                <td><%= r.id %></td>
                <td>
                  <%= r.company_id == null ? "Global" : (companyMap.get(Number(r.company_id)) || ("#" + r.company_id)) %>
                </td>
                <td class="fw-semibold"><%= r.code %></td>
                <td><%= r.name %></td>
                <td class="text-muted small"><%= r.description || "—" %></td>
                <td class="text-end">
                  <button class="btn btn-sm btn-outline-primary"
                          data-bs-toggle="modal"
                          data-bs-target="#rolePermModal-<%= r.id %>">
                    <i class="bi bi-shield-check me-1"></i>Permissions
                  </button>

                  <form method="POST" action="/management/roles/<%= r.id %>/delete" class="d-inline">
                    <button type="button"
                            class="btn btn-sm btn-outline-danger ms-1"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteRoleModal-<%= r.id %>">
                      <i class="bi bi-trash me-1"></i>Delete
                    </button>

                    <div class="modal fade" id="deleteRoleModal-<%= r.id %>" tabindex="-1">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title">Delete Role</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                          </div>
                          <div class="modal-body">
                            Delete role <span class="fw-semibold"><%= r.code %></span> — <%= r.name %>?
                            <div class="text-muted small mt-2">
                              If this role is assigned to any users, deletion should be blocked.
                            </div>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">
                              <i class="bi bi-trash me-1"></i>Delete
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </form>

                  <!-- Permissions modal -->
                  <div class="modal fade" id="rolePermModal-<%= r.id %>" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                      <form method="POST" action="/management/roles/<%= r.id %>/permissions" class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title">Role Permissions: <%= r.code %> — <%= r.name %></h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        


                        <div class="modal-body">

                            <div class="mb-3">
                                <input type="text"
                                        class="form-control"
                                        placeholder="Search permissions (code or description)..."
                                        data-perm-search="<%= r.id %>">
                            </div>
                          <% if (permsAllSafe.length === 0) { %>
                            <div class="text-muted">No permissions found.</div>
                          <% } else { %>
                            <div class="row g-2">
                              <% permsAllSafe.forEach(p => { %>
                                    <div class="col-12 col-md-6 perm-item"
                                        data-role="<%= r.id %>"
                                        data-text="<%= (p.code + ' ' + (p.description || '')).toLowerCase() %>">
                                        <label class="d-flex gap-2 align-items-start border rounded-3 p-2 w-100 justify-content-start"
                                                style="cursor:pointer;">
                                            <input class="form-check-input mt-1"
                                                    type="checkbox"
                                                    name="permissions[]"
                                                    value="<%= p.id %>"
                                                    <%= roleHasPerm(r.id, p.id) ? "checked" : "" %> />

                                            <div class="flex-grow-1 text-start">
                                                <div class="fw-semibold text-start"><%= p.code %></div>
                                                <div class="text-muted small text-start"><%= p.description || "" %></div>
                                            </div>
                                        </label>
                                    </div>
                              <% }) %>
                            </div>
                          <% } %>
                        </div>

                        <div class="modal-footer">
                          <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                          <button class="btn btn-primary">
                            <i class="bi bi-save me-1"></i>Save
                          </button>
                        </div>
                      </form>
                    </div>
                  </div>

                </td>
              </tr>
            <% }) %>

            <% if (rolesSafe.length === 0) { %>
              <tr>
                <td colspan="6" class="text-center text-muted py-4">No roles found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

    </div>
  </div>

</div>
