<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
  <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
  <%- include("partials/navbar", { active: "workers" }); %>

  <div class="container my-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
      <h1 class="fw-bold text-primary display-6">
        <i class="bi bi-people-fill me-2"></i> Worker Directory
      </h1>
      <button type="button"
              class="btn btn-lg btn-success shadow-sm rounded-pill px-4"
              onclick="openCreateModal()">
        <i class="bi bi-plus-lg me-1"></i> Register New Worker
      </button>
    </div>

    <!-- Search + filters -->
    <div class="row mb-4 align-items-center">
      <div class="col-lg-8 col-md-12">
        <div class="input-group shadow-sm rounded-pill overflow-hidden">
          <span class="input-group-text bg-white border-0">
            <i class="bi bi-search"></i>
          </span>
          <input
            type="text"
            id="searchWorker"
            class="form-control border-0 py-2"
            placeholder="Search by name, worker code, or passport number..."
          />
        </div>
      </div>

      <div class="col-lg-4 col-md-12 mt-3 mt-lg-0 text-md-start text-lg-end">
        <div class="d-inline-block me-2">
          <button class="btn btn-outline-secondary rounded-pill dropdown-toggle"
                  type="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false">
            <i class="bi bi-funnel"></i> Filter Status
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#" data-filter-status="all">All</a></li>
            <li><a class="dropdown-item" href="#" data-filter-status="active">Active</a></li>
            <li><a class="dropdown-item" href="#" data-filter-status="inactive">Inactive</a></li>
          </ul>
        </div>

        <button class="btn btn-outline-secondary rounded-pill" disabled title="Later">
          <i class="bi bi-download"></i> Export
        </button>
      </div>
    </div>

    <!-- Workers Table -->
    <div class="card shadow-lg border-0 rounded-4">
      <div class="card-body p-0">

        <!-- TOP pagination + count -->
        <div class="d-flex justify-content-between align-items-center px-3 py-2 border-bottom bg-light">
          <small class="text-muted" id="workersCountTop"></small>
          <nav>
            <ul class="pagination pagination-sm mb-0" id="workersPaginationTop"></ul>
          </nav>
        </div>

        <div class="table-responsive">
          <table class="table table-hover mb-0" id="workersTable">
            <thead class="table-primary text-uppercase small">
                <tr>
                    <th scope="col">Code</th>
                    <th scope="col">Name</th>
                    <th scope="col">English Name</th>
                    <th scope="col">Passport No</th>
                    <th scope="col">Nationality</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">Wage Tier</th>
                    <th scope="col">Active</th>
                    <th scope="col">Note</th>
                    <th scope="col" class="text-end">Actions</th>
                </tr>
            </thead>



            <tbody id="workersBody">
              <tr>
                <td colspan="10" class="text-center text-muted py-5">
                  <div class="spinner-border spinner-border-sm me-2 text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                  </div>
                  Loading worker data...
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- BOTTOM pagination + count -->
        <div class="d-flex justify-content-between align-items-center px-3 py-2 border-top bg-light">
          <small class="text-muted" id="workersCountBottom"></small>
          <nav>
            <ul class="pagination pagination-sm mb-0" id="workersPagination"></ul>
          </nav>
        </div>

      </div>
    </div>
  </div>

  <!-- Worker Modal (Create/Edit) -->
  <div class="modal fade" id="workerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl">
      <div class="modal-content rounded-3">
        <div class="modal-header">
          <h5 class="modal-title" id="workerModalTitle">Worker</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <form id="workerForm">
            <input type="hidden" id="workerId" />

            <!-- Basic info -->
            <div class="row g-3">
              <div class="col-md-3">
                <label class="form-label">Code</label>
                <input type="text" id="workerCode" class="form-control" />
              </div>

              <div class="col-md-4">
                <label class="form-label">Name</label>
                <input type="text" id="workerName" class="form-control" />
              </div>

              <div class="col-md-5">
                <label class="form-label">English Name</label>
                <input type="text" id="workerEnglishName" class="form-control" />
              </div>

              <div class="col-md-4">
                <label class="form-label">Passport No</label>
                <input type="text" id="passportNo" class="form-control" />
              </div>

              <div class="col-md-4">
                <label class="form-label">Nationality</label>
                <input type="text" id="nationality" class="form-control" />
              </div>

              <div class="col-md-4">
                <label class="form-label">Start Date</label>
                <input type="text" id="employmentStart" class="form-control" placeholder="e.g. 6/1/2018" />
              </div>

              <div class="col-md-4">
                <label class="form-label">Active</label>
                <select id="isActive" class="form-select">
                  <option value="1" selected>Yes (Active)</option>
                  <option value="0">No (Inactive)</option>
                </select>
                <div class="form-text">Inactive workers can be hidden from normal operations.</div>
              </div>

              <div class="col-md-4">
                <label class="form-label">Wage Tier</label>
                <select id="wageTierId" class="form-select"></select>
              </div>

              <div class="col-md-8">
                <label class="form-label">Note</label>
                <input type="text" id="field1" class="form-control" />
              </div>
            </div>
          </form>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancel
          </button>
          <button type="button" class="btn btn-primary" onclick="saveWorker()">
            Save Changes
          </button>
        </div>

      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/company-switcher.js"></script>
  <script src="/js/workers.js"></script>
</body>
</html>
