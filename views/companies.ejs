<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
  <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
  <!-- Navbar -->
  <%- include("partials/navbar", { active: "companies" }); %>

  <div class="container my-5">
    <!-- Header + Primary Action -->
    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
      <h1 class="fw-bold text-primary display-6">
        <i class="bi bi-building me-2"></i> Company Directory
      </h1>

      <button
        type="button"
        class="btn btn-lg btn-success shadow-sm rounded-pill px-4"
        onclick="openCreateCompany()"
      >
        <i class="bi bi-plus-lg me-1"></i> Add New Company
      </button>
    </div>

    <!-- Search row -->
    <div class="row mb-4 g-3 align-items-end">
      <div class="col-md-4">
        <label class="form-label fw-medium">Search by Code</label>
        <div class="input-group shadow-sm rounded-pill overflow-hidden">
          <span class="input-group-text bg-white border-0">
            <i class="bi bi-search"></i>
          </span>
          <input
            type="text"
            id="searchCompanyCode"
            class="form-control border-0 py-2"
            placeholder="e.g. MALL, HQ, BR01..."
          />
        </div>
      </div>

      <div class="col-md-6">
        <label class="form-label fw-medium">Search by Name</label>
        <div class="input-group shadow-sm rounded-pill overflow-hidden">
          <span class="input-group-text bg-white border-0">
            <i class="bi bi-search"></i>
          </span>
          <input
            type="text"
            id="searchCompanyName"
            class="form-control border-0 py-2"
            placeholder="Company name..."
          />
        </div>
      </div>

      <div class="col-md-2 text-md-end">
        <!-- Placeholder for future export button if you want -->
        <!--
        <button class="btn btn-outline-secondary rounded-pill mt-3 mt-md-0">
          <i class="bi bi-download"></i> Export
        </button>
        -->
      </div>
    </div>

    <!-- Companies table card -->
    <div class="card shadow-lg border-0 rounded-4">
      <div class="card-body p-0">
        <!-- Top pagination / count -->
        <div class="d-flex justify-content-between align-items-center px-3 py-2 border-bottom bg-light">
          <small class="text-muted" id="companiesCountTop">Loading...</small>
          <nav>
            <ul class="pagination pagination-sm mb-0" id="companiesPaginationTop"></ul>
          </nav>
        </div>

        <!-- Table -->
        <div class="table-responsive">
          <table class="table table-hover mb-0" id="companiesTable">
            <thead class="table-primary text-uppercase small">
              <tr>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Phone</th>
                <th scope="col" class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody id="companiesBody">
              <tr>
                <td colspan="5" class="text-center text-muted py-5">
                  <div class="spinner-border spinner-border-sm me-2 text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                  </div>
                  Loading company data...
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Bottom pagination / count -->
        <div class="d-flex justify-content-between align-items-center px-3 py-2 border-top bg-light">
          <small class="text-muted" id="companiesCountBottom"></small>
          <nav>
            <ul class="pagination pagination-sm mb-0" id="companiesPaginationBottom"></ul>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <!-- Company Modal -->
  <div class="modal fade" id="companyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content rounded-3">
        <div class="modal-header">
          <h5 class="modal-title">Company</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
            <form id="companyForm">
                <input type="hidden" id="companyId" />

                <div class="row g-3">
                    <div class="col-md-4">
                    <label class="form-label">Short Code</label>
                    <input
                        type="text"
                        id="companyShortCode"
                        class="form-control"
                        placeholder="e.g. MALL, HQ"
                    />
                    </div>

                    <div class="col-md-8">
                    <label class="form-label">Company Name</label>
                    <input
                        type="text"
                        id="companyName"
                        class="form-control"
                        placeholder="Full company name"
                        required
                    />
                    </div>

                    <div class="col-md-8">
                    <label class="form-label">Address</label>
                    <input
                        type="text"
                        id="companyAddress"
                        class="form-control"
                        placeholder="Address (optional)"
                    />
                    </div>

                    <div class="col-md-4">
                    <label class="form-label">Phone</label>
                    <input
                        type="text"
                        id="companyPhone"
                        class="form-control"
                        placeholder="Phone (optional)"
                    />
                    </div>
                </div>
            </form>

            <hr class="my-3" />
            <div>
                <label class="form-label fw-medium mb-2">Wage Rules</label>

                <div id="companyRulesBox" class="border rounded-3 p-3 bg-light">
                    <div class="text-muted small">Loading rules...</div>
                </div>

                <div class="form-text">
                    Base rule is always enabled. You can add more rules later.
                </div>
            </div>
        </div>

        


        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancel
          </button>
          <button type="button" class="btn btn-primary" onclick="saveCompany()">
            Save
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/company-switcher.js"></script>
  <script src="/js/companies.js"></script>
</body>
</html>
