<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title || "Reports" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body data-can-filter-paytype="<%= canFilterPayType ? 1 : 0 %>">
  <%- include("partials/navbar", { active: "reports" }); %>

  <div class="container py-4">
    <header class="mb-4">
      <h1 class="fw-bold text-primary">Reports</h1>
      <p class="text-muted small mb-0">Generate summaries from recorded work entries.</p>
    </header>

    <!-- Report selection -->
    <section class="card shadow-sm border-0 rounded-4 mb-4">
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-4">
            <h6 class="text-muted text-uppercase small mb-2">Account Reports</h6>

            <button class="btn btn-outline-primary w-100 mb-2 report-btn"
              data-report="sales-listing" data-label="Sales Listings 每天生意记录">
              Account - Sales Listings 每天生意记录
            </button>


            <button class="btn btn-outline-primary w-100 mb-2 report-btn"
              data-report="account-worker-job-listing"
              data-label="Account - Worker Job Listing 技师工作记录">
              Account - Worker Job Listing 技师工作记录
            </button>
          </div>

          <div class="col-md-8">
            <h6 class="text-muted text-uppercase small mb-2">Payroll & Summary</h6>

            <div class="row g-2">
              <!-- ✅ Report #1 we implement now -->
              <div class="col-sm-6">
                <button class="btn btn-warning w-100 report-btn"
                  data-report="worker-monthly-pays" data-label="Worker Monthly Pays 技师的提成">
                  Worker Monthly Pays 技师的提成
                </button>
              </div>

              <!-- Others later -->
              <div class="col-sm-6">
                <button class="btn btn-warning w-100 report-btn" disabled>
                  Monthly Summary
                  <span class="badge text-bg-secondary ms-2">later</span>
                </button>
              </div>

              <div class="col-sm-6">
                <button class="btn btn-warning w-100 report-btn" disabled>
                  Workers' Wages (Cheque)
                  <span class="badge text-bg-secondary ms-2">later</span>
                </button>
              </div>

              <div class="col-sm-6">
                <button class="btn btn-warning w-100 report-btn" disabled>
                  Workers' Pay Slip
                  <span class="badge text-bg-secondary ms-2">later</span>
                </button>
              </div>
            </div>

            <!-- <div class="text-muted small mt-3">
              For now we build <strong>Worker Monthly Pays</strong> first (date range + PDF export).
            </div> -->
          </div>
        </div>
      </div>
    </section>

    <!-- Report output -->
    <section class="card shadow-sm border-0 rounded-4">
      <div class="card-body">
        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-2 mb-3">
          <div>
            <h5 class="mb-0" id="reportTitle">No report selected</h5>
            <div class="text-muted small" id="reportSubtitle">Select a report to begin.</div>
          </div>

          <!-- Controls (show only when a report is selected) -->
          <div class="d-flex flex-wrap align-items-end gap-2" id="reportControls" style="display:none;">
            <div id="payTypeFilters" class="d-flex gap-3 align-items-center" style="display:none;">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="filterCash" checked>
                <label class="form-check-label small" for="filterCash">Cash</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="filterBank" checked>
                <label class="form-check-label small" for="filterBank">Bank</label>
              </div>
            </div>

            <div id="jobNoFilters" class="d-flex gap-3 align-items-center">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="filterJobNo1" checked>
                <label class="form-check-label small" for="filterJobNo1">Job No1</label>
              </div>

              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="filterJobNo2" checked>
                <label class="form-check-label small" for="filterJobNo2">Job No2</label>
              </div>
            </div>

            <div>
              <label class="form-label small mb-1">Start</label>
              <input type="date" class="form-control form-control-sm" id="reportStartDate">
            </div>
            <div>
              <label class="form-label small mb-1">End</label>
              <input type="date" class="form-control form-control-sm" id="reportEndDate">
            </div>

            <button class="btn btn-primary btn-sm" id="btnPreview">
              <i class="bi bi-eye"></i> Preview
            </button>

            <button class="btn btn-outline-danger btn-sm" id="btnPdf">
              <i class="bi bi-file-earmark-pdf"></i> Export PDF
            </button>

            <!-- Excel later -->
            <button class="btn btn-outline-success btn-sm" disabled title="Later">
              <i class="bi bi-file-earmark-spreadsheet"></i> Excel
            </button>
          </div>
        </div>

        <div id="reportContent" class="text-muted small">
          Please choose a report from the buttons above.
        </div>
      </div>
    </section>
  </div>


  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/company-switcher.js"></script>

  <script src="/js/reports.js"></script>
</body>
</html>
